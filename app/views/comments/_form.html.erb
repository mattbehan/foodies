<% if current_user %>

  <div class="col-sm-8 col-xs-10">

      <%= link_to "Add comment", root_path, remote: true, :class => "btn btn-default new-comment-form-toggle" %>
      <div class="new-comment-form">
      <p>Your Comment</p>

      <%= form_tag("/restaurants/#{restaurant.id}/reviews/#{review.id}/comments", method: "post", remote: true) do %>

        <textarea class="comment-text-area-<%= review.id %>" name="comment[content]" rows=5 cols=50></textarea>

        <p><%= submit_tag %></p>
      <% end %>
      </div>

  </div>
<% end %>
