<h1>Reviews for <%= @restaurant.name %></h1>
<hr>

<% @reviews.each do |review| %>
  <h2><%= review.title %></h2>
  <h4>Written by: <%= review.reviewer.email %></h4>
  <h4>Rating: <%= review.rating %></h4>
  <p><%= review.content %></p>
  <hr>
  <% if current_user %>
    <p><%= link_to image_tag("upvote.png"), upvote_review_path(review), method: :post %>
    <%= link_to image_tag("downvote.png"), downvote_review_path(review), method: :post %></p>
  <% end %>

<% end %>
