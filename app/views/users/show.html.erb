<% if user_signed_in? %>

<!-- show users profile information -->
	<% if @profile %>
		<%= render "profiles/show", layout: false, locals: {profile: @profile}%>
		<li>
		  <%= link_to('Edit profile information', edit_user_profile_path(current_user)) %>
	  </li>
	<% else %>
  	<li>
		  <%= link_to('Create profile', new_user_profile_path(current_user)) %>
	  </li>
	<% end %>


  <li>
  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>        
  </li>

  <!-- link to destroy registration within edit -->

  <li>
	  <%= link_to('Edit account information', edit_user_registration_path) %>
  </li>


<% else %>
  <li>
  <%= link_to('Login', new_user_session_path)  %>  
  </li>

  <li>
	  <%= link_to('Register', new_user_registration_path)  %>
  </li>
<% end %>

