<%= stylesheet_link_tag "social-media-buttons" %>
<div class="enter-site">
  <h2>Log in</h2>

  <%= form_for(@user, url: user_session_path) do |f| %>
  <%= devise_error_messages! %>
  <%= render partial: "welcome/errors", locals: {resource: @user} %>
  
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.label :remember_me %>
        <%= f.check_box :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  <% end %>

    <div class="social-media-buttons">
    <%= link_to image_tag("Facebook.png"), "/users/auth/facebook", :class => "social-media-button" %>
    <%= link_to image_tag("Instagram.png"), "/users/auth/instagram", :class => "social-media-button" %>
    <%= link_to image_tag("Twitter.png"), "/users/auth/twitter", :class => "social-media-button" %>
  </div>

  <div class="links">
    <%= render "users/shared/links" %>
  </div>
</div>